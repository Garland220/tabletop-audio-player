doctype html

html(lang="en")
  head
    title Titan Audio Admin
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel="stylesheet", href="css/main.css", type="text/css", media="screen")

  body
    h1 Titan Audio Admin
    h3(id='connection')

    div(id='Sounds')
      div(id='funSounds')
        h3 Fun Sounds

        button(id='critical', ) Critical Hit
        button(id='criticalMiss') Critical Miss
        button(id='toasty') Toasty
        button(id='levelup') Level Up


      div(id='environmentSounds')
        h3 Environment Sounds

        button(id='stream1') Stream1
        button(id='stream2') Stream2
        button(id='breeze') Breeze
        button(id='wind1') Wind1
        button(id='wind2') Wind2
        button(id='wind3') Wind3
        button(id='rain1') Rain1
        button(id='rain1') Rain2
        button(id='rain3') Rain3
        button(id='rainOutside') Rain Outside
        button(id='rainOutside2') Rain Outside2
        button(id='thunder1') Thunder1
        button(id='thunder2') Thunder2
        button(id='rumble') rumble


      div(id='propSounds')
        h3 Prop Sounds

        button(id='torches') Torches
        button(id='campfire1') Campfire1
        button(id='campfire2') Campfire2
        button(id='flagWind') Flag Wind
        button(id='signWind') Sign Wind
        button(id='ropeCreak') Rope Creak
        button(id='repairs') Repairs
        button(id='fountain') Fountain
        button(id='doorOpen') doorOpen
        button(id='doorClose') doorClose
        button(id='gateOpen') gateOpen
        button(id='warDrums1') War Drums
        button(id='warHorn1') War Horn


      div(id='horrorSounds')
        h3 Horror Sounds

        button(id='heartbeat1') Heartbeat1
        button(id='heartbeat2') Heartbeat2
        button(id='churchBell') Church Bell
        button(id='tone1') Tone1
        button(id='tone2') Tone2
