      div(id='combatSounds')
        h3 Combat Sounds

        button(id='bow') Bow
        button(id='club') Club
        button(id='staff') Staff
        button(id='stab') Stab
        button(id='shieldBash') Shield Bash
        button(id='heal') Heal
        button(id='fireSpell') fireSpell
        button(id='iceSpell') iceSpell
        button(id='miscSpell') miscSpell
        button(id='musicSpell') musicSpell
        button(id='natureSpell') natureSpell
        button(id='explosion1') explosion1
        button(id='explosion2') explosion2
        button(id='knifeSharpen') Knife Sharpening
